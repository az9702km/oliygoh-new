---
import Card from "../components/Card.astro";
import Filter from "../components/Filter.astro";
import FilterItem from "../components/FilterItem.astro";
import Pagination from "../components/Pagination.astro";
import PaginationItem from "../components/PaginationItem.astro";
import PopCardList from "../components/PopCardList.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="bg-surface-low py-2xl">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <aside class="position-sticky top-0">
            <h1 class="section-title h4">Filter</h1>
            <Filter>
              <FilterItem active>Bakalavriatura</FilterItem>
              <FilterItem>Magistratura</FilterItem>
              <FilterItem>Aspirantura</FilterItem>
              <FilterItem>Doktorantura</FilterItem>
            </Filter>
          </aside>
        </div>
        <div class="col-md-9">
          <h1 class="section-title h4">Grantlar</h1>
          <div class="row">
            <div class="col-md-4">
              <Card />
            </div>
            <div class="col-md-4">
              <Card />
            </div>
            <div class="col-md-4">
              <Card />
            </div>
            <div class="col-md-4">
              <Card />
            </div>
            <div class="col-md-4">
              <Card />
            </div>
            <div class="col-md-4">
              <Card />
            </div>
            <div class="col-md-4">
              <Card />
            </div>
            <div class="col-md-4">
              <Card />
            </div>
            <div class="col-md-4">
              <Card />
            </div>
            <div class="col-md-4">
              <Card />
            </div>
            <div class="col-md-4">
              <Card />
            </div>
            <div class="col-md-4">
              <Card />
            </div>
          </div>
          <div class="d-flex justify-content-end pt-xl mt-sm">
            <Pagination>
              <PaginationItem>
                <i class="ti ti-chevron-left"></i>
              </PaginationItem>
              <PaginationItem>1 </PaginationItem>
              <PaginationItem active>2 </PaginationItem>
              <PaginationItem>.. </PaginationItem>
              <PaginationItem>4 </PaginationItem>
              <PaginationItem>
                <i class="ti ti-chevron-right"></i>
              </PaginationItem>
            </Pagination>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

---
import Card from "../components/Card.astro";
import CardArticle from "../components/CardArticle.astro";
import FormGroup from "../components/FormGroup.astro";
import IconCard from "../components/IconCard.astro";
import InputToggle from "../components/InputToggle.astro";
import Pagination from "../components/Pagination.astro";
import PaginationItem from "../components/PaginationItem.astro";
import PopCardList from "../components/PopCardList.astro";
import ProfileMainBlock from "../components/ProfileMainBlock.astro";
import ProfileNav from "../components/ProfileNav.astro";
import ProfileTotal from "../components/ProfileTotal.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main class="bg-surface-low py-2xl">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="section">
            <ProfileMainBlock />
            <ProfileTotal />
            <ProfileNav>
              <a href="#!" class="nav-item">
                <i class="ti ti-award"></i> Natijalarim</a
              >
              <a href="#!" class="nav-item active">
                <i class="ti ti-settings"></i> Sozlamalar</a
              >
              <a href="#!" class="nav-item">
                <i class="ti ti-logout"></i> Chiqish</a
              >
            </ProfileNav>
            <IconCard />
          </div>
        </div>
        <div class="col-md-9">
          <div class="section mb-xl">
            <h4 class="h4 mb-lg">Sozlamalar</h4>
            <div class="row">
              <div class="col-md-6">
                <FormGroup>
                  <Fragment slot="label">Ism-sharifingiz</Fragment>
                  <input type="text" />
                </FormGroup>
              </div>
              <div class="col-md-6">
                <FormGroup>
                  <Fragment slot="label">Ism-sharifingiz</Fragment>
                  <input type="text" />
                </FormGroup>
              </div>
              <div class="col-md-12">
                <InputToggle type="checkbox" custom
                  >Parolni o'zgartirish</InputToggle
                >
              </div>
              <div class="col-md-6">
                <FormGroup>
                  <Fragment slot="label">Yangi parol</Fragment>
                  <input type="password" disabled />
                </FormGroup>
              </div>
              <div class="col-md-6">
                <FormGroup>
                  <Fragment slot="label">Parol tasdigâ€™i</Fragment>
